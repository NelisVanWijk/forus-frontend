extends ../layout/layout-landing
block content
    .header-splash: .splash
    
    header.section.section-header: .wrapper
        .block.block-navbar
            a(href="./index.html").navbar-logo
                img(src="./assets/img/landing/forus-logo-normal.svg")
                img(src="./assets/img/landing/forus-logo-hover.svg").hover
            nav.navbar-list
                a(href="{{ $root.appConfigs.frontends.sponsor }}").navbar-item SPONSOR
                a(href="{{ $root.appConfigs.frontends.provider }}").navbar-item PROVIDER
                a(href="{{ $root.appConfigs.frontends.validator }}").navbar-item VALIDATOR
                a(href="{{ $root.appConfigs.frontends.me_app }}").navbar-item.active ME APP
                a(href="{{ $root.appConfigs.frontends.webshop }}").navbar-item WEBSHOP
        
        .header-body.header-body-sprite-fill
            .header-content
                .header-title Meld u aan als winkelier of dienstverlener
                .header-description Bereik meer klanten, maak meer winst en draag bij aan een maatschappelijk doel.
