.wrapper
    .text-center
        button(
            ng-if="!$root.auth_user" 
            ng-click="$ctrl.requestAuthToken()").button.button-primary {{ "home.buttons.login" | translate }}
        button(
            ng-if="$root.auth_user" 
            ui-sref="csv-validation").button.button-primary {{ "home.buttons.panel" | translate }}
    div(ng-show="$ctrl.showModal").modal
        .modal-backdrop(ng-click="$ctrl.closeModal()")
        .modal-window
            .modal-header {{ "home.buttons.login" | translate }}
            .modal-body.form
                .modal-section
                    .qrcode: #qrcode
            .modal-footer.text-center
                button(ng-click="$ctrl.closeModal()").button.button-primary {{ "home.buttons.cancel" | translate }}