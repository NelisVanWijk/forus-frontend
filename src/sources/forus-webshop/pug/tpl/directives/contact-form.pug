section(ng-if="$root.appConfigs.features.contactForm").section.section-contact_form: .wrapper 
    .block.block-contact_form
        .contact-title {{ "contact.header.title" | translate }}
        .contact-form: .form.row
            .col.col-md-5
                .contact-logo: img(src="./assets/img/forus-logo-normal.svg")
                .contact-details
                    .contact-label {{ "contact.header.subtitle" | translate }}
                    .contact-address 
                        | {{ "contact.header.adress" | translate }}
                        br
                        | {{ "contact.header.phone" | translate }}
                    .contact-email {{ "contact.header.mail" | translate }}
                    br

                    .contact-label {{ "contact.header.follow" | translate }}
                    .contact-socials
                        a(href="#").contact-social: .mdi.mdi-facebook
                        a(href="#").contact-social: .mdi.mdi-twitter
                        a(href="#").contact-social: .mdi.mdi-linkedin-box
                        a(href="#").contact-social: .mdi.mdi-google-plus

            .col.col-md-7
                .form-group
                    .form-label.form-label-required {{ "contact.header.name" | translate }}
                    input(type="text" placeholder="").form-control
                .form-group
                    .form-label.form-label-required {{ "contact.header.usermail" | translate }}
                    input(type="text" placeholder="").form-control
                .row
                    .col.col-md-6: .form-group
                        .form-label.form-label-required {{ "contact.header.userphone" | translate }}
                        input(type="text" placeholder="").form-control
                    .col.col-md-6: .form-group
                        .form-label.form-label-required {{ "contact.header.organisation" | translate }}
                        input(type="text" placeholder="").form-control
                .form-group
                    .form-label.form-label-required {{ "contact.header.message" | translate }}
                    textarea(placeholder="").form-control
                .form-group
                .form-group
                    button.button.button-primary {{ "contact.header.button" | translate }}