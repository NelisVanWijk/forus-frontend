.header-splash: .splash.splash-d

header.section.section-header: .wrapper
    top-navbar

section.section.section-profile: .wrapper
    .section-title
        span(translate="vouchers.header.title")  
        .span-count(ng-bind="$ctrl.vouchers.length")

    .block.block-profile
        profile-card(ng-if="$ctrl.cfg.showAccountSidebar")
        
        .profile-content
            .block.block-vouchers(ng-if="$ctrl.vouchers.length > 0")
                voucher-card(ng-repeat="voucher in $ctrl.vouchers" voucher="voucher")
                
            empty-block(
                title="Geen vouchers"
                description="Momenteel heeft u geen vouchers"
                text="Gebruik een activatiecode"
                hide-link="false"
                ng-if="$ctrl.vouchers.length == 0")

contact-form 